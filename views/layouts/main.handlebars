<html lang='en'>

  <head>
    <meta charset='UTF-8' />
    <meta name='viewport' content='width=device-width, initial-scale=1.0' />
    <title>Park Hopper</title>
    <link rel='stylesheet' href='/css/jass.css' />
    <link rel='stylesheet' href='/css/style.css' />
    <link rel="stylesheet" href="/css/styles.css"/>
  </head>

  <body>
    <div>
      <header>
        {{!-- Logo that doubles as button to return to home screen --}}
        <h1 class="container mx-auto break-after-all m-3">
          <a href='/'>
            <img
              src='./public/images/logo-parkhopper.png'
              alt='Park Hopper Logo'
            />
          </a>
        </h1>

        <!-- Hero images -->
        <p>
          <img src='../../public/images/hero-cacti.png' class='visible flow-root' />
          {{!-- <img src='../../public/images/hero-glacier.png' class='hidden flow-root' />
          <img src='../../public/images/hero-waterfall.png' class='hidden flow-root' /> --}}
        </p>

        <nav class="container text-center space-x-6 bg-yellow-900 text-white text-lg">
          <a href='/'>HOME</a>
          <a href='/past-trips'>PAST TRIPS</a>
          <a href='/planned-trips'>PLANNED TRIPS</a>
          <a href='/add-a-trip'>ADD A TRIP</a>
          <!-- Conditionally render login or logout links -->
          {{#if logged_in}}
            <a href='/profile'>PROFILE</a>
            <button class='no-button' id='logout'>LOGOUT</button>
          {{else}}
            <a href='/'>LOGIN</a>
          {{/if}}
        </nav>

      </header>

      <main class='container container-fluid mt-5'>
        <!-- Render the sub layout -->
        {{{body}}}
      </main>
      
      <footer>

      </footer>
    </div>



    <!-- Render script for logged in users only -->
    {{#if logged_in}}
      <script src='/js/logout.js'></script>
    {{/if}}

    <script
      src='https://code.jquery.com/jquery-3.6.1.min.js'
      integrity='sha256-o88AwQnZB+VDvE9tvIXrMQaPlFFSUTR+nldQm1LuPXQ='
      crossorigin='anonymous'
    ></script>
    <script src='./js/accordion.js'></script>
    <script src='./js/manageTrips.js'></script>

  </body>

</html>


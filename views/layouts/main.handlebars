<html lang='en'>

  <head>
    <meta charset='UTF-8' />
    <meta name='viewport' content='width=device-width, initial-scale=1.0' />
    <title>Park Hopper</title>
    <link rel='stylesheet' href='/css/jass.css' />
    <link rel='stylesheet' href='/css/styles.css' />
    <link rel='stylesheet' href='/css/style.css' />
  </head>

  <body>
    <div>
      <header>
        {{! Logo that doubles as button to return to home screen }}
        <h1 class='container.container-fluid mx-auto break-after-all m-3'>
          <a href='/'>
            <img
              src='./public/images/logo-parkhopper.png'
              alt='Park Hopper Logo'
            />
          </a>
        </h1>

        <!-- Random hero images -->
        <p class='object-cover'>
          <img src='{{get_image}}' class='visible' />
        </p>

        <nav
          class='container.container-fluid text-left space-x-6 bg-yellow-900 text-white text-lg pl-4 w-full h-12 pt-1 sm:text-wrap'
        >
          <a href='/'>HOME</a>
          <a href='/past-trips'>PAST TRIPS</a>
          <a href='/planned-trips'>PLANNED TRIPS</a>
          <a href='/add-a-trip'>ADD A TRIP</a>
          <!-- Conditionally render login or logout links -->
          {{#if logged_in}}
            <a href='/profile'>PROFILE</a>
            <button class='no-button' id='logout'>LOGOUT</button>
          {{else}}
            <a href='/register'>REGISTER</a>
          {{/if}}
        </nav>
      </header>

      <main class='container container-fluid mt-5'>
        <!-- Render the sub layout -->
        {{{body}}}
      </main>

      <footer class='text-center font-thin text-slate-700 mt-10'>
        Courtesy of the Park Hopper team.
      </footer>
    </div>

    <!-- Render script for logged in users only -->
    {{#if logged_in}}
      <script src='/js/logout.js'></script>
    {{/if}}

    <script
      src='https://code.jquery.com/jquery-3.6.1.min.js'
      integrity='sha256-o88AwQnZB+VDvE9tvIXrMQaPlFFSUTR+nldQm1LuPXQ='
      crossorigin='anonymous'
    ></script>
    <script src='./js/accordion.js'></script>
    <script src='./js/manageTrips.js'></script>

  </body>

</html>
<html lang='en'>

  <head>
    <meta charset='UTF-8' />
    <meta name='viewport' content='width=device-width, initial-scale=1.0' />
    <title>Park Hopper</title>
    <link rel='stylesheet' href='/css/jass.css' />
    <link rel='stylesheet' href='/css/style.css' />
    <link rel="stylesheet"  href="/css/styles.css"/>
  </head>

  <body class="">
    <div>
      <header>

        <h1 class="container mx-auto break-after-all m-3">
          <a href='/'>
            <img
              src='./public/images/logo-parkhopper.png'
              alt='Park Hopper Logo'
            />
          </a>
        </h1>

        <!-- ADD HERO IMAGES HERE. RANDOM SELECTION OF THE IMAGES IN public/images -->
        <p><img src='../../public/images/hero-cacti.png' class='flow-root' /></p>

        <nav class="container text-center">
          <a href='/'>HOME</a>
          <a href='/past-trips'>PAST TRIPS</a>
          <a href='/planned-trips'>PLANNED TRIPS</a>
          <a href='/add-a-trip'>ADD A TRIP</a>
          <!-- Conditionally render login or logout links -->
          {{#if logged_in}}
            <a href='/profile'>PROFILE</a>
            <button class='no-button' id='logout'>LOGOUT</button>
          {{else}}
            <a href='/'>LOGIN</a>
          {{/if}}
        </nav>

      </header>

      <main class='container container-fluid mt-5'>
        <!-- Render the sub layout -->
        {{{body}}}
      </main>
      <footer>

      </footer>
    </div>

    <!-- Render script for logged in users only -->
    {{#if logged_in}}
      <script src='/js/logout.js'></script>
    {{/if}}

    <script
      src='https://code.jquery.com/jquery-3.6.1.min.js'

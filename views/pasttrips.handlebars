<div class='text-center'>
  <h1>Past Trips</h1>
</div>

<!-- ACCORDION STRUCTURE FOR TRIP INFO BLOCKS -->
<div class="accordion">
{{#each pastVisits as |pasttrip|}}
  <div class="park-block"> 
      <h4>Name of the Park</h4>
      <div class="location-info">
          <p>{{pasttrip.travel_month}} / {{pasttrip.travel_year}}</p>
          <p>{{activity_list.review}}</p>
          <p>{{pasttrip.review}}</p>
          <p>{{pasttrip.lodging}}</p>
          <p>{{pasttrip.companion_info}}</p>
      </div>
  </div>
{{/each}}
</div>
{{#unless logged_in}}
  <div class='row space-x-1 mb-5'>
    <div class='col-md-5 bg-lime-900 rounded-md w-2/5'>
      <h2 class='text-white p-3 text-lg'>Login</h2>

      <form class='form login-form text-white'>
        <div class='form-group'>
          <label for='email-login'>Email:</label>
          <input class='form-input' type='text' id='email-login' />
        </div>
        <div class='form-group'>
          <label for='password-login'>Password:</label>
          <input class='form-input' type='password' id='password-login' />
        </div>
        <div class='form-group'>
          <button class='btn bg-amber-600' type='submit'>Login</button>
        </div>
      </form>
    </div>

    <div class='col-md-5 rounded-md w-2/5'>
      <h2 class='text-xl font-bold'>Welcome to Park Hopper!</h2>
      </br>
      <h4>This is where you can document your national park visits and write
        down your day dreams for your next trip.
      </h4>

    </div>


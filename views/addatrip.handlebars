{{! container for this whole form }}
<div class='container mb-5 w-full'>
  <div class='text-center'>
    <h1 class='text-2xl font-extrabold mb-5'> Add A Trip </h1>
  </div>

  <form
    class='new-park-form bg-lime-900 rounded-md text-white space-y-3 space-x-3 p-3'
  >

    <div>
      Would you like to add a past trip or plan a new one?
      <br />
      <input type='radio' name='trip-past' />
      Add a Past Trip
      <br />
      <input type='radio' name='trip-future' />
      Plan a New Trip
    </div>

    <!-- THESE WILL BE PULLED FROM THE API LATER. JUST HARD-CODED FOR NOW FOR TESTING -->
    <select id='park-name' class='text-black'>
      <option value='none'>Select a park</option>
      <option>Acadia National Park</option>
      <option>Arches National Park</option>
      <option>Bryce Canyon National Park</option>
      <option>Grand Canyon National Park</option>
      <option>Grand Teton National Park</option>
      <option>Joshua Tree National Park</option>
    </select>

    <div id='past-trip-fields'>
      <div>
        Trip Month and Year:
        <br />
        <select id='trip-month' class='text-black'>
          <option value='none'>Month</option>
          <option>January</option>
          <option>February</option>
          <option>March</option>
          <option>April</option>
          <option>May</option>
          <option>June</option>
          <option>July</option>
          <option>August</option>
          <option>September</option>
          <option>October</option>
          <option>November</option>
          <option>December</option>
        </select>
        <input
          type='text'
          id='trip-year'
          placeholder='2023'
          class='text-black'
        />
      </div>
      <br />
      <div>Review:
        <br /><textarea
          id='trip-review'
          placeholder='I loved visiting...'
          class='text-black'
        ></textarea></div>
    </div>
    <!-- end of past-trip-fields -->

    <div id='future-trip-fields'>
      Cost of Admission:
      <br />$<input
        type='text'
        id='trip-cost'
        placeholder='250'
        class='text-black'
      />
    </div>
    <!-- end of future-trip-fields -->

    <div>Lodging:
      <br /><input
        type='text'
        id='lodging'
        placeholder='Tent, RV, Hotel, etc.'
        class='text-black'
      /></div>
    <div>Companions:
      <br />
      <input
        type='text'
        id='companion-info'
        placeholder='Friends, family, etc. '
        class='text-black'
      /></div>
    <div>Activities:
      <br /><textarea
        id='activity-list'
        placeholder='Hiking, cook-off, etc.'
        class='text-black'
      ></textarea></div>
    <div><input type='submit' value='SUBMIT' class='text-white btn bg-amber-600' /></div>

  </form>
</div>